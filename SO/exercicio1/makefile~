#definição do compilador
CC = gcc

#opcoes para desenvolvimento do projeto
#permite que o programa seja depurado com gdb 
CFLAGS = -g 

PROGRAMS = loop-malloc\
           pilha 

%definição dos programas que serão compilados
all: $(PROGRAMS)

#usado o comando rm para remover os objetos (regra)
clean:
      rm -f *~ $(PROGRAMS)
